@model SimpleApp.Models.Product.InputProductViewModel
@{
    ViewData["Title"] = "Add Product";
}
<div align="center">
    <h3>Add Product:</h3>

    <div class="col-md-4 border border-light bg-info">
        <form asp-controller="Product" asp-action="Add" method="post">
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div>
                <input type="submit" name="Add" value="Add" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>

</div>