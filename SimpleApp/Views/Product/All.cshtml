@using SimpleApp.Models.Product
@model List<OutputProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<h3 align="center">All Products</h3>
@if (this.TempData["Message"] != null)
{
    <div class="alert alert-success">
        @this.TempData["Message"]
    </div>
}
<table class="table">
    <tr class="alert-info">
        <th>
            Name:
            <a asp-action="All" asp-route-sort="nameA"><i class="fas fa-arrow-circle-up"></i>Asc</a>
            <a asp-action="All" asp-route-sort="nameD"><i class="fas fa-arrow-circle-down"></i>Desc</a>
        </th>
        <th>Description:</th>
        <th>
            Price:
            <a asp-action="All" asp-route-sort="priceA"><i class="fas fa-arrow-circle-up"></i>Asc</a>
            <a asp-action="All" asp-route-sort="priceD"><i class="fas fa-arrow-circle-down"></i>Desc</a>
        </th>
    </tr>
    @foreach (var pr in Model)
    {
<tr>
    <th>@pr.Name</th>
    <th>@pr.Description</th>
    <th>
        @pr.Price $
    </th>
</tr>
    }
</table>


